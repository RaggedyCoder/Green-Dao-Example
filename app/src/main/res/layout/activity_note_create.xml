<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:hint="@string/title"
        android:paddingBottom="5dip"
        android:paddingEnd="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingStart="10dip"
        android:paddingTop="10dip"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/story_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save_note_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date_text_view"
        android:background="@android:color/transparent"
        android:gravity="start|top"
        android:hint="@string/story"
        android:maxLines="1"
        android:paddingEnd="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingStart="10dip"
        android:paddingTop="10dip"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/date_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_edit_text"
        android:gravity="end|center"
        android:paddingEnd="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingStart="10dip"
        android:text="@string/date_header"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date_header_text_view"
        android:layout_alignBottom="@+id/date_header_text_view"
        android:layout_toEndOf="@+id/date_header_text_view"
        android:layout_toRightOf="@+id/date_header_text_view"
        android:gravity="end|center"
        android:paddingEnd="10dip"
        android:paddingLeft="0dip"
        android:paddingRight="10dip"
        android:paddingStart="0dip"
        android:text="@string/dummy_date"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/save_note_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/save_note" />
</RelativeLayout>